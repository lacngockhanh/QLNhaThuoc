@{ 
    var cart = new TH.Agular.UserManager.Models.Cart();
    try
    {
        cart = Session["Cart"] as TH.Agular.UserManager.Models.Cart;
    }
    catch { };
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>
        Hệ thống tra cứu thuốc
    </title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Content/admin/js/jquery-3.3.1.min.js"></script>
    <script src="~/Content/admin/js/bootstrap.min.js"></script>
    <script>
        var _domain = '@(Request.Url.Scheme + System.Uri.SchemeDelimiter + Request.Url.Host + (Request.Url.IsDefaultPort ? "" : ":" + Request.Url.Port) + "/")';
    </script>
</head>
<body style="background:url('@Url.Content("~/Content/admin/images/bg.jpg")');">

    <main>
        <div class="container-fluid">
            <br/><br/><br/>
            <h3 class="mt-4 text-center">Hệ thống nhà thuốc Đồng Tháp</h3>
            <div class="row">
                <div class="col-md-12 text-center" style="color:#ccc;">
                    <a href="@Url.Action("Shops", "Home")"><i class="fa fa-home"></i> Danh sách hiệu thuốc</a>
                    | <a href="@Url.Action("Index", "Home")"><i class="fa fa-search"></i> Tra cứu thuốc</a>
                    @if (cart != null)
                    {
                        <span>| <a href = "@Url.Action("Cart", "Home")" > <i class="fa fa-shopping-cart"></i> Giỏ hàng (@(cart.ListCartItem.Count)) </a></span>
                    }
                    else
                    {
                        <span>| <a href = "@Url.Action("Cart", "Home")" > <i class="fa fa-shopping-cart"></i> Giỏ hàng(0) </a></span>
                    }
                </div>
            </div>
            <br/>
            <br/>
            @RenderBody()
            <div style="text-align:center; margin-top:50px; margin-bottom:100px;">
                <a href="@Url.Action("Index", "AdminHome")">Admin Control Panel</a>
            </div>
            
        </div>
    </main>
</body>
</html>